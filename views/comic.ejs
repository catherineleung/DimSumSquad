          <% 
          var index;
          for (i = 0; i < comics.length; i++) {
            if (String(id) == String(comics[i]._id)) {
              index = i;
            }
          }
          %>

          <div ng-hide="editToggle">
            <strong>Title:</strong><br> <%= comics[index].title %><br><br>
            <strong>Description:</strong> <br><%= comics[index].description %> <br><br>
            <strong>Tags:</strong> <br> <%= comics[index].tags %> <br><br>
             <strong>Creator:</strong><br> <%= comics[index].creatorID %> <br><br>
             <% if (user.local.username == comics[index].creatorID) { %>
            <button class="btn btn-primary" ng-click="toggleEdit()">Edit Comic</button>
            <% } %>
          </div>
          <form ng-show="editToggle" method="post" action="/comics/<%=comics[index]._id%>">
            <strong>Title:</strong>
              <input type="text" class="form-control" id="editTitle" value="<%= comics[index].title %>" name="title">
            <strong>Description:</strong>
              <input type="text" class="form-control" id="editDescription" value="<%= comics[index].description %>" name="description">
            <strong>Tags:</strong>
              <input type="text" class="form-control" id="editTags" value="<%= comics[index].tags %>" name="tags"><br>
            <input ng-show="editToggle" class="btn btn-primary" type="submit" ng-click="toggleEdit()" value="Save Changes">  
           <!-- <button class="btn btn-primary" ng-show="editToggle" ng-click="toggleEdit()">Cancel</button>--> 
          </form>
          <br>

          <!-- DELETE COMIC BUTTON only shows up if you are creator of that comic -->
          <% if (user.local.username == comics[index].creatorID) { %>
            <!-- comic from user's comics list-->
            <form method="post" action="<%= '/deletecomic/' + comics[index]._id %>">
            <button class="btn btn-primary" type="submit">Delete Comic</button>
            </form>
            <% } %>


